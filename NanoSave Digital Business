    <!-- 
      JAVASCRIPT
      Handles the logic for showing/hiding pages and views
    -->
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Get all the DOM elements we need to toggle
            const pageHome = document.getElementById('page-home');
            const pageDashboard = document.getElementById('page-dashboard');
            
            const navLoggedOut = document.getElementById('logged-out-nav');
            const navLoggedIn = document.getElementById('logged-in-nav');
            
            const viewWallet = document.getElementById('view-wallet');
            const viewInvestments = document.getElementById('view-investments');
            // Add any new views here
            const allViews = [viewWallet, viewInvestments];
            
            const loginBtn = document.getElementById('login-btn');
            const logoutBtn = document.getElementById('logout-btn');
            
            const navWalletBtn = document.getElementById('nav-wallet-btn');
            const navInvestmentsBtn = document.getElementById('nav-investments-btn');
            const navHomeBtn = document.getElementById('nav-home-btn'); // Link back to home

            // Function to show a specific view in the dashboard
            function showView(viewId) {
                // Hide all views
                allViews.forEach(view => {
                    view.classList.add('hidden');
                });
                // Show the requested view
                const viewToShow = document.getElementById(viewId);
                if (viewToShow) {
                    viewToShow.classList.remove('hidden');
                }
            }
            
            // Function to simulate logging in
            function login() {
                // Hide homepage and logged-out nav
                pageHome.classList.add('hidden');
                navLoggedOut.classList.add('hidden');
                
                // Show dashboard and logged-in nav
                pageDashboard.classList.remove('hidden');
                navLoggedIn.classList.remove('hidden');
                
                // Default to wallet view
                showView('view-wallet');
                window.scrollTo(0, 0); // Scroll to top
            }
            
            // Function to simulate logging out
            function logout() {
                // Hide dashboard and logged-in nav
                pageDashboard.classList.add('hidden');
                navLoggedIn.classList.add('hidden');
                
                // Show homepage and logged-out nav
                pageHome.classList.remove('hidden');
                navLoggedOut.classList.remove('hidden');
                window.scrollTo(0, 0); // Scroll to top
            }

            // --- Event Listeners ---
            
            loginBtn.addEventListener('click', login);
            logoutBtn.addEventListener('click', logout);
            
            // Use 'logout' function for the "Home" button in the logged-in nav
            // to go back to the public homepage.
            navHomeBtn.addEventListener('click', logout);

            navWalletBtn.addEventListener('click', (e) => {
                e.preventDefault(); // Prevent page jump from a#href
                showView('view-wallet');
            });
            
            navInvestmentsBtn.addEventListener('click', (e) => {
                e.preventDefault();
                showView('view-investments');
            });
            
        });
    </script>

</body>
</html>
